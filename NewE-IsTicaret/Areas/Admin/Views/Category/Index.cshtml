@model IEnumerable<Category>

    <div<class="container">
        <div class="row">
            <div class="col-6">
                <h2> Kategori Listesi</h2>
            </div>
             <div class="col-6">
                  <a asp-controller="Category" asp-action="Create" class="btn btn-primary ">
                <span> yeni kategori ekle</span>
                
            </a>

            </div>
            
        </div>

        <div class="row">
            
           

             <table class="table table-bordered table-striped my-2">
                 <thead>

                     <tr>

                         <th> 
                             Kategori Adı
                         </th>
                         <th>
                             İşlemler
                         </th>

                     </tr>

                 </thead>

                 <tbody>

                    @foreach (var Category  in  Model)// modelin null geliyor ondan referans hatası alıyorum
                    {

                    <tr>
                        <td>@Category.Name</td>

                        <td>
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@Category.Id" class="btn btn-primary">
                                Güncelle
                            </a>
                             <a asp-controller="Category" asp-action="Delete" asp-route-id="@Category.Id" class="btn btn-danger">
                                Sil
                            </a>

                       </td>

                    </tr>
                        
                    }

                    

                 </tbody>

             </table>

        <div/>

<div/>
